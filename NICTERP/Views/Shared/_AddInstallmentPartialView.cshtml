<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
@model NICTERP.Models.NICT.Installment
@{long fn = ViewBag.FormNo;}
@using (Ajax.BeginForm(new AjaxOptions()
{
    Url = "/Installments/Create/" + fn,
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "success",
    OnFailure = "failure"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Form_No, htmlAttributes: new { @Value = fn })
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table">
            <tr>
                <th>Amount</th>
                <th>Datetime</th>
                <th>&nbsp;</th>
            </tr>
            <tr>
                <td>
                    @Html.EditorFor(model => model.Amount_Paid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount_Paid, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Datetime, new { htmlAttributes = new { @class = "form-control datepicker", @Value = @DateTime.Now.ToLongDateString() } })
                    @Html.ValidationMessageFor(model => model.Datetime, "", new { @class = "text-danger" })
                </td>
                <td>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </td>
            </tr>
        </table>
        <div class="form-group col-xs-6" style="padding:0;margin:0">
            <div class="col-md-10">


            </div>
        </div>

        <div class="form-group col-xs-6" style="padding:0;margin:0">

            <div class="col-md-10">


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
}
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script>
    $('.datepicker').datepicker({
    });
</script>